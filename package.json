{
  "name": "sfdc-extension",
  "displayName": "Salesforce SOQL Query Runner",
  "description": "Run SOQL queries in VSCode with authentication",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:sfdcEnvironments",
    "onCommand:sfdc-extension.login",
    "onCommand:sfdc-extension.runQuery",
    "onCommand:sfdc-extension.addEnvironment",
    "onCommand:sfdc-extension.removeEnvironment",
    "onCommand:sfdc-extension.setActiveEnvironment"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sfdc-explorer",
          "title": "Salesforce Explorer",
          "icon": "media/salesforce.svg"
        }
      ]
    },
    "views": {
      "sfdc-explorer": [
        {
          "id": "sfdcEnvironments",
          "name": "Environments"
        }
      ]
    },
    "commands": [
      {
        "command": "sfdc-extension.login",
        "title": "SFDC: Login"
      },
      {
        "command": "sfdc-extension.runQuery",
        "title": "SFDC: Run SOQL Query"
      },
      {
        "command": "sfdc-extension.addEnvironment",
        "title": "SFDC: Add Environment"
      },
      {
        "command": "sfdc-extension.removeEnvironment",
        "title": "SFDC: Remove Environment"
      },
      {
        "command": "sfdc-extension.setActiveEnvironment",
        "title": "SFDC: Set as Active Environment"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sfdc-extension.addEnvironment",
          "group": "navigation",
          "when": "view == sfdcEnvironments"
        }
      ],
      "view/item/context": [
        {
          "command": "sfdc-extension.setActiveEnvironment",
          "group": "inline",
          "when": "view == sfdcEnvironments"
        },
        {
          "command": "sfdc-extension.removeEnvironment",
          "group": "inline",
          "when": "view == sfdcEnvironments"
        }
      ],
      "editor/context": [
        {
          "command": "sfdc-extension.runQuery",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@types/jsforce": "^1.11.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "jsforce": "^1.11.0"
  }
} 